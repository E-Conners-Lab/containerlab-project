! {{ device.name }} - Phase 1: OSPF Configuration
! Generated from NetBox

interface Loopback0
 ip address {{ loopback_ip }} 255.255.255.255
 ip ospf 1 area 0
 no shutdown

{% for intf in ospf_interfaces %}
interface {{ intf.name }}
 description {{ intf.description }}
 ip address {{ intf.ip }} {{ intf.mask }}
 ip ospf network point-to-point
 ip ospf 1 area 0
 no shutdown

{% endfor %}
router ospf 1
 router-id {{ loopback_ip }}
 passive-interface Loopback0
